include mixins/all

doctype html
html(lang='en')
    head
        include parts/head

    body.page
        include parts/header

        main.page__inner
            article.section.section--padding-btm-small.section--bg-dark
                .section__inner
                    +title-area({
                        h1: 'Test automation, made simple',
                        subTitle: 'One consolidated tool for all test needs where multiple protocols can be tested simultaneously.',
                        classNames: 'section__title-area section__title-area--width-medium section__title-area--text-center'
                    })
                        .section__button-area
                            +button({text:'Request a Demo ↓', classNames: 'js-go-to', href: '#get-started'})

                    .logos
                        h5.h5.logos__title Trusted by the world’s most innovative businesses – big and small

                        //ul.logos__list
                        //    li.logos__item
                        //        include ../assets/images/companies/samsung.svg
                        //    li.logos__item
                        //        include ../assets/images/companies/digital_ocean.svg
                        //    li.logos__item
                        //        include ../assets/images/companies/new_relic.svg
                        //    li.logos__item
                        //        include ../assets/images/companies/doordash.svg
                        //    li.logos__item
